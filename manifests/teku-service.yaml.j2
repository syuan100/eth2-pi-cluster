apiVersion: v1
kind: Service
metadata:
  name: teku
spec:
  type: LoadBalancer
  selector:
    app: teku
  ports:
  - name: teku-api
    port: {{ teku_api_port }}
    targetPort: {{ teku_api_target_port }}
  - name: teku-p2p
    port: {{ teku_port }}
    targetPort: {{ teku_target_port }}

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: teku
  labels:
    app: teku
spec:
  replicas: 1
  revisionHistoryLimit: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: teku
  template:
    metadata:
      labels:
        app: teku
    spec:
      volumes:
        - name: eth2pv
          persistentVolumeClaim:
            claimName: eth2claim
      containers:
        - name: teku
          image: {{ teku_image_tag }}
          imagePullPolicy: "Always"
          securityContext:
            runAsUser: 0
            allowPrivilegeEscalation: false
          ports:
            - containerPort: {{ teku_api_port }}
            - containerPort: {{ teku_port }}
          command: ["/opt/teku/bin/teku"]
          args: [ "--config-file=/home/teku/teku-config.yml", "--data-path", "/home/teku" ]
          volumeMounts:
            - mountPath: "/home"
              name: eth2pv